# Production Environment Configuration for Kirogeist
# Copy this file to .env and update the values

# Flask Configuration
FLASK_ENV=production
PORT=5051
SECRET_KEY=your-secret-key-here-change-this

# AI Configuration
AI_MODEL=gpt-4o-mini
OPENAI_API_KEY=your-openai-api-key-here

# AWS Configuration
AWS_REGION=us-east-1
S3_BUCKET=your-s3-bucket-name
AWS_ACCESS_KEY_ID=your-aws-access-key
AWS_SECRET_ACCESS_KEY=your-aws-secret-key

# Database Configuration (for future use)
DATABASE_URL=sqlite:///kirogeist.db
# For PostgreSQL: postgresql://user:password@host:port/database

# Path Mapping (Docker container to host paths)
PATH_MAPS=[{"from": "/home/www-virtual/example.com", "to": "/var/www/html/example"}]

# PHP Fix Patterns
PHP_FIX_PATTERNS=./patterns.yaml

# Security Configuration
ALLOWED_HOSTS=your-domain.com,your-ip-address
CORS_ORIGINS=https://your-domain.com

# Notification Configuration
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASSWORD=your-app-password
SMTP_FROM=noreply@your-domain.com

# Webhook Configuration
SLACK_WEBHOOK_URL=https://hooks.slack.com/services/YOUR/SLACK/WEBHOOK
DISCORD_WEBHOOK_URL=https://discord.com/api/webhooks/YOUR/DISCORD/WEBHOOK

# Rate Limiting
RATE_LIMIT_PER_MINUTE=60
RATE_LIMIT_BURST=10

# Logging
LOG_LEVEL=INFO
LOG_FILE=/app/logs/kirogeist.log

# Monitoring
HEALTH_CHECK_INTERVAL=30
METRICS_ENABLED=true

# Test Configuration
DEFAULT_TEST_TIMEOUT=300
MAX_CONCURRENT_TESTS=3
SCREENSHOT_QUALITY=80
REPORT_RETENTION_DAYS=90